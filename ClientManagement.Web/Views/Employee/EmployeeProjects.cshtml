@model IEnumerable<ClientManagement.Core.Models.Project>

@{
    ViewBag.Title = "EmployeeProjects";
}

<h2>EmployeeProjects</h2>
@if (ViewBag.displayMenu == "Yes")
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProjectStatus)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProjectStatus)
        </td>
        @if (User.IsInRole("Manager"))
        {
            <td>
                @Html.ActionLink("Edit Project", "../Project/Edit", new { id = item.Id }) |
                @Html.ActionLink("Remove Project", "Delete", new { id = item.Id })
            </td>
        }
    </tr>
}

</table>
